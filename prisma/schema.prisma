datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ============================================
// Better Auth Core Schema (Required)
// https://www.better-auth.com/docs/concepts/database#core-schema
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Custom fields
  firstName     String?
  lastName      String?
  birthDate     DateTime?

  // Relations
  accounts  Account[]
  sessions  Session[]
  profile   Profile?
  requests  PracticeRequest[]
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String    // The id of the account from the provider
  providerId            String    // The id of the provider (e.g. "google", "github")
  userId                String    // The id of the user
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?   // Only for credentials provider
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, value])
}

// ============================================
// Application Models
// ============================================

model Profile {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  districtId String?
  district   District? @relation("ProfileDistrict", fields: [districtId], references: [id])

  bio                String?
  nativeLangs        Language[]     @relation("NativeLanguages")
  learningLangs      Language[]     @relation("LearningLanguages")
  interests          Interest[]
  jobfield           String?
  preferenceDistrict District[]     @relation("PreferenceDistricts")
  timezone           String         @default("Europe/Berlin")
  availability       Availability[]
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt
}

model District {
  id                  String    @id @default(cuid())
  name                String    @unique
  city                String
  country             String
  profiles            Profile[] @relation("ProfileDistrict")
  preferredByProfiles Profile[] @relation("PreferenceDistricts")
}

model PracticeRequest {
  id          String        @id @default(cuid())
  requesterId String
  requester   User          @relation(fields: [requesterId], references: [id], onDelete: Cascade)
  message     String?
  status      RequestStatus @default(OPEN)
  requestType RequestType   @default(LANGUAGE)
  createdAt   DateTime      @default(now())
}

model Language {
  id       String    @id @default(cuid())
  code     String    @unique
  name     String
  teachers Profile[] @relation("NativeLanguages")
  learners Profile[] @relation("LearningLanguages")
}

// ============================================
// Enums
// ============================================

enum RequestStatus {
  OPEN
  ACCEPTED
  CLOSED
}

enum RequestType {
  LANGUAGE
}

enum Interest {
  TECHNOLOGY
  SPORTS
  MUSIC
  TRAVEL
  FOOD
  ART
  LITERATURE
  SCIENCE
  HISTORY
  NATURE
  DANCE
  GAMING
  MOVIES
  FITNESS
  FASHION
  PHOTOGRAPHY
  VOLUNTEERING
  THEATRE
  POLITICS
  HUMOR
}

enum Availability {
  DAYTIME
  EVENING
  WEEKENDS
}